class Solution {
public:
    ListNode *entryNodeOfLoop(ListNode *head) {
    if (head == nullptr) return nullptr;

    ListNode* slow = head;
    ListNode* fast = head;

    while (slow != fast) {
        if (fast->next || fast->next->next) {
            return nullptr;
        }

        slow = slow->next;
        fast = fast->next->next;
    }

    fast = head;
    while (slow != fast) {
        fast = fast->next;
        slow = slow->next;
    }

    return slow;
}
};
