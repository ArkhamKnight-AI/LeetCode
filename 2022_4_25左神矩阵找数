#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

bool searchMatrix(vector<vector<int>>& matrix, int target) {
	if (matrix.size() < 1) return 0;

	//从左上角点开始寻找
	int M = matrix.size();
	int N = matrix[0].size();

	int row = 0;
	int col = N - 1;

	
	//如果某一列第一个数都大于target 那么 它下面所有的数 都会大于target 所以col--
	while (row <= M - 1 && col >= 0) {
		if (matrix[row][col] > target) {
			col--;
			continue;
		}

		if (matrix[row][col] < target) {
			row++;
			continue;
		}

		if (matrix[row][col] == target) {
			return true;
		}
	}
	
	//到越界了都没找到 说明不存在
	return false;
}

int main() {
	vector<vector<int>> a = { {1,4,7,11,15},
							 {2,5,8,12,19},
							 {3,6,9,16,22},
							 {10,13,14,17,24},
							 {18,21,23,26,30} };
	cout << searchMatrix(a, 20) << endl;
	system("pause");
	return 0;
} 
