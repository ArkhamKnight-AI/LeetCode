class Solution {
public:
    ListNode *findFirstCommonNode(ListNode *headA, ListNode *headB) {
        ListNode* cur1 = headA;
        ListNode* cur2 = headB;
        while(cur1 != cur2){
            if(cur1) cur1 = cur1->next;
            else cur1 = headB;
            if(cur2) cur2 = cur2->next;
            else cur2 = headA;
        }
        
        return cur1;
    }
};
