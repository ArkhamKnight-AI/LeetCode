#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

//返回左右两个部分中最大值之差 的最大值
int maxLeftRight(vector<int>& arr) {
	if (arr.size() < 1) return 0;
	if (arr.size() < 2) return arr[0];

	int maxVal = INT_MIN;
	for (int i = 0; i < arr.size(); i++) {
		maxVal = max(maxVal, arr[i]);
	}

	return maxVal - min(arr[0], arr[arr.size() - 1]);
}

int main() {
	
	system("pause");
	return 0;
}  
