class Solution {
public:
    bool searchArray(vector<vector<int>> array, int target) {
        if(array.size() <= 0) return false;
        int row = 0, col = array[0].size() - 1;

        while(row < array.size() && col >= 0){
            //找到了
            if(array[row][col] == target){
                return true;
            }
            else if(array[row][col] > target){
                col--;
            }
            else{
                row++;
            }
        }

        return false;
    }
};
