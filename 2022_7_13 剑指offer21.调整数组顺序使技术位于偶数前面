class Solution {
public:
   void swap(vector<int>& arr, int i, int j) {
    int temp = arr[i];
    arr[i] = arr[j];
    arr[j] = temp;
}

//判断数字是否合法
void reOrderArray(vector<int> &array) {
    if (array.size() <= 1) return;

    int i = 0, j = array.size() - 1;

    while (i < j) {
        //缩小区间
        while (i <= j && array[i] % 2 == 1) i++;
        while (i <= j && array[j] % 2 == 0) j--;

        if (i < j) {
            swap(array, i, j);
        }
    }
}
};
