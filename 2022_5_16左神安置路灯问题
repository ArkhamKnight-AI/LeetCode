1.'X'可以安置路灯
#include<iostream>
#include<string>
using namespace std;

int main()
{
	int t;
	int n;
	string s;
	cin >> t;
	for (int i = 0; i < t; ++i)
	{

		cin >> n;
		cin >> s;
		int count = 0;
		for (int i = 0; i < n; ++i)
		{
			if (s[i] == '.')
			{
				i += 2;
				count++;
			}
			if (s[i] == 'X')
			{
				continue;
			}
		}
		cout << count << endl;
	}
}


2.'X'不可以安置路灯
#include<iostream>
#include<vector>
#include<string>
using namespace std;

int minLight(string& s) {
	if (s.size() < 1) return 0;

	int index = 0;
	int light = 0;

	while (index < s.size()) {
		if(s[index] == 'X'){
			index++;
		}

		else {
			light++;
			//如果来到了最后一个位置 就break
			if (index + 1 == s.size()) {
				break;
			}

			else {
				if (s[index + 1] == 'X') {
					index = index + 2;
				}

				else {
					index = index + 3;
				}
			}
		}
	}

	return light;
}


int main() {
	int stringNum;
	cin >> stringNum;

	for (int i = 0; i < stringNum; i++) {
		int stringLen;
		cin >> stringLen;
		string s;
		cin >> s;
		cout << minLight(s) << endl;
	}

	system("pause");
	return 0;
}
