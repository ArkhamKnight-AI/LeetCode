#include<iostream>
#include<vector>
#include<string>
#include<algorithm>
using namespace std;

//将字符串翻转的代码
string reverseString(string& s) {
	for (int i = 0, j = s.size() - 1; i <= j; i++, j--) {
		swap(s[i], s[j]);
	}

	return s;
}

string reverseWords(string s) {
	 //(1)首先翻转字符串
	reverse(s.begin(), s.end());

	//(2)然后再把每一段的字符串翻转回来
	for (int i = 0; i < s.size(); i++) {
		int j = i;
		while (j < s.size() && s[j] != ' ') j++;
		reverse(s.begin() + i, s.begin() + j);
		i = j;
	}

	return s;
}

int main() {
	
	return 0;
}
